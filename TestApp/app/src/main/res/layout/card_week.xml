<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_list_week"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height_card_view"
    android:layout_marginLeft="@dimen/marginLeft_card_view"
    android:layout_marginRight="@dimen/marginRight_card_view"
    android:layout_marginTop="@dimen/marginTop_card_view"
    card_view:cardCornerRadius="@dimen/cornerRadius_card_view"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_card_view"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBlack"
                android:alpha="0.5"
                />

            <TextView
                android:id="@+id/week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft_week_card_view"
                android:layout_marginTop="@dimen/marginTop_week_card_view"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_week_card_view"
                />

            <TextView

                android:id="@+id/contentWeek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:paddingLeft="@dimen/marginLeft_contentWeek_card_view"
                android:paddingRight="@dimen/marginRight_contentWeek_card_view"
                android:textColor="@color/colorWhite"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorCaffee0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleWeek"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/marginLeft_titleWeek_card_view"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:text="Hust"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/text_size_titleWeek_card_view" />

            <ImageView
                android:layout_width="0dp"
                android:id="@+id/imageBack"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/paddingBottom_imageBack_card_view"
                android:paddingLeft="@dimen/paddingLeft_imageBack_card_view"
                android:paddingTop="@dimen/paddingTop_imageBack_card_view"
                android:src="@drawable/back" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>