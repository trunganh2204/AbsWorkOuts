<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.PlayWorkOutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tvTotalTime"
            style="@style/textstyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            />

        <TextView
            style="@style/textstyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/tvStep"
            android:gravity="center"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_view"
        android:background="@color/colorBlack"
        >

    </View>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_tvTime_activity_play_workouts"
        android:textStyle="bold"
        android:text="30"
        />

    <TextView
        android:id="@+id/tvNameExecises"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_tvNameExercises_activity_play_workout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/imageAnimation"
            android:layout_height="@dimen/layout_height_imageAnimation_activity_play_workout"
            android:layout_marginLeft="@dimen/marginLeft_imageAnimation_activity_play_workout"
            android:layout_marginRight="@dimen/marginRight_imageAnimation_activity_play_workout"
            android:layout_marginTop="@dimen/marginTop_imageAnimation_activity_play_workout"
            android:layout_marginBottom="@dimen/marginBottom_imageAnimation_activity_play_workout"
            android:paddingLeft="@dimen/paddingLeft_imageAnimation_activity_play_workout"
            android:paddingRight="@dimen/paddingRight_imageAnimation_activity_play_workout"
            android:background="@drawable/rectangle" />
        <TextView
            android:id="@+id/tvNameExecisesNext"
            style="@style/textstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageAnimation"
            android:layout_marginTop="@dimen/marginTop_tvNameExecisesNext_activity_play_workout"
            android:gravity="center"
            />
    </RelativeLayout>

    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_bottombar">

    </com.aurelhubert.ahbottomnavigation.AHBottomNavigation>

</LinearLayout>
