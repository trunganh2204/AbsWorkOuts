<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="anh.excam.com.testapp.MainActivity"
    android:background="@color/colorWhite"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_marginBottom="@dimen/vp_activitymain_marginbottom"
        >

    </android.support.v4.view.ViewPager>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_title_activity_main"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_title_activity_main"
        android:typeface="monospace"
        android:id="@+id/titltBottomBar"
        android:alpha="0.8"
        android:background="@color/colorWhite"
        android:text="@string/WorkOuts"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorBlack"
        android:id="@+id/view"
        android:layout_marginTop="@dimen/margin_top_view_activity_main"
        >
    </View>


    <include layout="@layout/ah_bottom_bar" />

</RelativeLayout>
