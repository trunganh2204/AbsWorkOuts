<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/marginTop_fragment"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_heart" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="2"
            android:text="@string/health_kit"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_fr_setting" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/HealthSwitch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="0.5"
            android:theme="@style/SCBSwitch" />

    </LinearLayout>

    <include layout="@layout/seperate">


    </include>

    <TextView
        android:id="@+id/textDetail"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/health_kit_is_not_available_is_this_device"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <include layout="@layout/seperate"></include>

    <LinearLayout
        android:id="@+id/LinearSounds"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textSounds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/sounds"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_fr_setting" />

        <TextView
            android:id="@+id/textDefault"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="end"
            android:text="Default"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_next_24dp" />
    </LinearLayout>

    <include
        layout="@layout/seperate"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewSound"
            android:layout_width="@dimen/widthImageSize"
            android:layout_height="@dimen/widthImageSize"
            android:layout_gravity="center"
            android:src="@drawable/ic_volume" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:theme="@style/SCBSwitch" />

    </LinearLayout>

    <include
        layout="@layout/seperate"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textVibration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Vibration"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_fr_setting" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/ToggleSwitch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.5"
            android:checked="true"
            android:theme="@style/SCBSwitch" />

    </LinearLayout>

    <include layout="@layout/seperate"></include>

    <include layout="@layout/seperate"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textMotivate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Motivate me"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_fr_setting" />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.5"
            android:theme="@style/SCBSwitch" />
    </LinearLayout>

    <include layout="@layout/seperate"></include>

    <include layout="@layout/seperate"></include>

    <LinearLayout
        android:id="@+id/linearButton"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textButtonNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Button Next"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_fr_setting" />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.5"
            android:checked="false"
            android:theme="@style/SCBSwitch" />

    </LinearLayout>

    <include layout="@layout/seperate"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textRestore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Restore purchases"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_fr_setting" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:paddingLeft="25dp"
            android:src="@drawable/ic_cloud" />

    </LinearLayout>

    <include layout="@layout/seperate"></include>

</LinearLayout>
